<center class="page-fonts">
	<table class='index-top'>
		<tr>
			<th class='cool-header' colspan='3'><%= facade.keyword.capitalize %> Events</th>
		</tr>
		<tr>
			<td><%= link_to "Sort by Show Date", search_path(search: facade.keyword, sort: "date_asc"), class: "home-button" %></td>
			<td><%= link_to "Sort by Price", search_path(search: facade.keyword, sort: "price_asc"), class: "home-button" %></td>
			<td><%= link_to "Sort by On Sale", search_path(search: facade.keyword, sort: "onsale_asc"), class: "home-button" %></td>
		</tr>
	</table>
</center>

<section class='search-index'>
	<table class='search-table'>
		<tr class='header-fonts'>
			<th>Date</th>
			<th>Event</th>
			<th></th>
		</tr>
		<% facade.events.each do |event| %>
			<tr class="page-fonts">
				<td><%= event.formatted_date %></td>
				<td><%= event.name %> at <%= event.venue %></td>
				<td><%= link_to "Join Room", rooms_path(tm_id: event.tm_id,
																								name: event.name + " at " +
																								event.venue),
																								method: :post %>
				</td>
			</tr>
		<% end %>
	</table>
</section>
