<center class="page-fonts">
	<h2><%= current_user.first_name %>'s dashboard | <%= link_to "Edit Profile", edit_user_registration_path %></h2><br>
	<p><b>Username:</b> <%= link_to current_user.username, "/users/#{current_user.username}" %></p>
	<p><b>Name:</b> <%= current_user.first_name %> <%= current_user.last_name %></p>
	<p><b>Email:</b> <%= current_user.email %></p>
	<% if current_user.paypal_me %>
		<p>PayPalMe Account URL: <%= link_to "paypal.me/#{current_user.paypal_me}", "https://paypal.me/#{current_user.paypal_me}" %> </p>
	<% end %><br><br>

	<% if current_user.has_interests? %>
		<h3>Interests</h3>
		<% current_user.interests.each do |interest| %>
			<li><%= interest.keyword %> | <%= link_to "Remove", destroy_interest_path(interest: interest), method: :delete %></li>
		<% end %>
	<% end %>
	<br><br>
	<%= simple_form_for [:current_user, Interest.new] do |f| %>
		<div class="interest-input"><%= f.input :keyword, label: "Add an Interest" %></div>
		<%= f.button :submit, "Add to My Interests", class: 'home-button' %>
	<% end %>
</center>
<div class='page-fonts'>
<% if current_user.offers != [] %>
	<section class='offers'>
		<table class='offers-table'>
			<tr>
				<th>Offering User</th>
				<th>Offer For</th>
				<th>Offer Price</th>
				<th>Ticket Quantity</th>
				<th>Notes</th>
				<th>Status</th>
			</tr>
			<% current_user.offers.each do |offer| %>
				<tr>
					<td><%= facade.find_username(offer.user_id) %></td>
					<td><%= facade.find_username(offer.offer_user_id) %></td>
					<td><%= offer.offer_price %></td>
					<td><%= offer.quantity_requested %></td>
					<td><%= offer.notes %></td>
					<% if offer.user_id == current_user.id %>
						<% if offer.status == 'pending' %>
							<td>
								<%= link_to 'Accept',
											offer_path(offer, accept: 'true'),
											method: :patch %>
											|
								<%= link_to 'Decline',
											offer_path(offer, accept: 'false'),
											method: :patch %>
							</td>
						<% else %>
							<td><%= offer.status %></td>
						<% end %>
					<% else %>
						<% if offer.status == 'accepted'%>
							<td><%= link_to "Pay this User", facade.seller_paypal(offer.user_id)%></td>
						<% else %>
							<td><%= offer.status %></td>
						<% end %>
					<% end %>
				</tr>
			<% end %>
		</table>
	</section>
<% end %>
</div>
