<%= simple_form_for :offer do |f| %>
  <%= f.input :quantity_requested, collection: 1..@max_quantity.to_i,
              prompt: 'How many tickets are you requesting?' %>
  <%= f.input :offer_price, placeholder: '100.00' %>
  <%= f.input :notes, placeholder: 'Leave a message' %>
  <%= f.button :submit, class: 'button-sml' %>
<% end %>
